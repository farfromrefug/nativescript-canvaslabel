{
    "extends": "../tsconfig",
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
            "tns-core-modules": [
                "./node_modules/@nativescript/core"
            ],
            "tns-core-modules/*": [
                "./node_modules/@nativescript/core/*"
            ],
            "~/*": [
                "app/*"
            ]
        },
        "moduleResolution": "node",
        "removeComments": false
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "../src/**/*.d.ts",
        "node_modules",
        "platforms"
    ]
}